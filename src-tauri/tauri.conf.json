{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "yarn build",
    "beforeDevCommand": "yarn dev",
    "devPath": "http://localhost:8080",
    "distDir": "../public",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "ave",
    "version": "0.1.1"
  },
  "tauri": {
    "allowlist": {
      "notification": {
        "all": true
      },
      "path": {
        "all": true
      },
      "shell": {
        "sidecar": true,
        "execute": true,
        "open": "",
        "scope": [
          { "name": "bin/ffmpeg", "args": true, "sidecar": true },
          { "name": "bin/ffprobe", "args": true, "sidecar": true },
          { "name": "bin/ffplay", "args": true, "sidecar": true }
        ]
      },
      "protocol": {
        "asset": true,
        "assetScope": ["*"]
      },
      "dialog": {
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [
        "bin/ffmpeg",
        "bin/ffprobe",
        "bin/ffplay"
      ],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.schizobulia.ave",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": "default-src: 'self'; media-src 'self' asset:"
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://www.jcbsb.com/soft/ave/update.json"
      ],
      "dialog": true,
      "pubkey": "xxxx",
      "windows": {
        "installMode": "passive"
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "ave",
        "width": 800
      }
    ]
  }
}